@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>مركز شبكات المرافق - نظام إدارة متكامل</title>

    <!-- Bootstrap CSS RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;800;900&display=swap" rel="stylesheet">

    <style>
        :root {
            /* لوحة الأزرق/سكاي الموحدة */
            --primary-color: #0ea5e9; /* Sky 500 */
            --primary-dark: #0369a1; /* Sky 700 */
            --secondary-color: #1d4ed8; /* Blue 700 */
            --secondary-light: #60a5fa; /* Blue 400 */
            --accent-color: #38bdf8; /* Sky 400 */
            --warning-color: #f59e0b; /* Amber 500 */
            --danger-color: #ef4444; /* Red 500 */
            --dark-bg: #0b1220; /* خلفية داكنة مائلة للأزرق */
            --muted: #64748b; /* Slate 500 */
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Cairo', sans-serif;
            overflow-x: hidden;
            color: #0f172a;
        }

        /* ========== Hero Section ========== */
        .hero-section {
            position: relative;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: radial-gradient(1200px 600px at 80% -10%, rgba(56,189,248,0.20), transparent 40%), radial-gradient(1000px 500px at 0% 110%, rgba(96,165,250,0.20), transparent 40%), linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                inset: 0;
                /* ← استبدل الصورة التالية بصورة مناسبة لشبكات المرافق */
                background-image: url("/uploads/utilities-network.jpg");
                background-size: cover;
                background-position: center;
                background-attachment: fixed;
                opacity: .13;
                z-index: 0;
                mix-blend-mode: luminosity;
            }

        .hero-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(14,165,233,.88) 0%, rgba(3,105,161,.88) 100%);
            z-index: 1;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            text-align: center;
            color: #fff;
            padding: 2rem;
            max-width: 980px;
            animation: fadeInUp 1s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .hero-logo {
            width: 120px;
            height: 120px;
            margin: 0 auto 1.75rem;
            background: linear-gradient(145deg,#ffffff,#e2e8f0);
            border-radius: 50%;
            display: grid;
            place-items: center;
            color: var(--primary-dark);
            font-size: 3rem;
            box-shadow: 0 20px 60px rgba(2,132,199,.35);
            border: 1px solid rgba(2,132,199,.15);
            animation: pulse 2s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        .hero-title {
            font-size: 3.25rem;
            font-weight: 900;
            margin-bottom: .75rem;
            text-shadow: 0 5px 18px rgba(0,0,0,.25);
        }

        .hero-subtitle {
            font-size: 1.25rem;
            font-weight: 700;
            opacity: .98;
            margin-bottom: .75rem;
        }

        .hero-description {
            font-size: 1.05rem;
            opacity: .95;
            line-height: 1.9;
            margin: 0 auto 2.2rem;
            max-width: 820px;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-hero {
            padding: 1.05rem 2.2rem;
            font-size: 1.05rem;
            font-weight: 900;
            letter-spacing: .2px;
            border-radius: 999px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: .65rem;
            position: relative;
            overflow: hidden;
            transition: transform .25s ease, box-shadow .25s ease, color .25s ease, background .25s ease;
            box-shadow: 0 10px 30px rgba(2,132,199,.25);
        }

            .btn-hero::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                border-radius: 50%;
                background: rgba(255,255,255,.28);
                transform: translate(-50%,-50%);
                transition: width .6s, height .6s;
            }

            .btn-hero:hover::before {
                width: 420px;
                height: 420px;
            }

        .btn-primary-hero {
            background: #fff;
            color: var(--primary-dark);
        }

            .btn-primary-hero:hover {
                transform: translateY(-4px);
                box-shadow: 0 16px 40px rgba(2,132,199,.35);
                color: var(--secondary-color);
            }

        .btn-secondary-hero {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: #fff;
            border: 2px solid rgba(255,255,255,.9);
        }

            .btn-secondary-hero:hover {
                transform: translateY(-4px);
                box-shadow: 0 16px 40px rgba(2,132,199,.45);
            }

        /* عناصر زخرفية */
        .floating-shapes {
            position: absolute;
            inset: 0;
            z-index: 1;
            pointer-events: none;
        }

        .shape {
            position: absolute;
            opacity: .12;
            animation: float 20s ease-in-out infinite;
            filter: blur(2px);
        }

            .shape:nth-child(1) {
                top: 10%;
                right: 10%;
                width: 150px;
                height: 150px;
                background: radial-gradient(circle,var(--secondary-light),var(--secondary-color));
                border-radius: 50%;
            }

            .shape:nth-child(2) {
                top: 60%;
                left: 10%;
                width: 200px;
                height: 200px;
                background: radial-gradient(circle,var(--accent-color),var(--primary-dark));
                border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                bottom: 10%;
                right: 20%;
                width: 180px;
                height: 180px;
                background: radial-gradient(circle,var(--primary-color),var(--secondary-color));
                border-radius: 63% 37% 54% 46% / 55% 48% 52% 45%;
                animation-delay: 4s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-28px) rotate(180deg);
            }
        }

        /* ========== Stats Section ========== */
        .stats-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            padding: 3.5rem 0;
            color: #fff;
        }

        .stat-card {
            text-align: center;
            padding: 1.5rem 1rem;
        }

        .stat-number {
            font-size: 3rem;
            font-weight: 900;
            margin-bottom: .35rem;
            text-shadow: 0 5px 15px rgba(0,0,0,.25);
        }

        .stat-label {
            font-size: 1.05rem;
            opacity: .98;
            font-weight: 800;
        }

        /* ========== Features Section ========== */
        .features-section {
            padding: 5rem 0;
            background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
            position: relative;
        }

        .section-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .section-title {
            font-size: 2.4rem;
            font-weight: 900;
            margin-bottom: .75rem;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .section-subtitle {
            font-size: 1.1rem;
            color: var(--muted);
            font-weight: 700;
        }

        .feature-card {
            background: #fff;
            border-radius: 1.75rem;
            padding: 2.25rem 1.75rem;
            height: 100%;
            box-shadow: 0 10px 40px rgba(2,132,199,.08);
            transition: all .35s ease;
            position: relative;
            overflow: hidden;
            border: 2px solid transparent;
        }

            .feature-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 5px;
                background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            }

            .feature-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 60px rgba(2,132,199,.18);
                border-color: var(--accent-color);
            }

        .feature-icon {
            width: 86px;
            height: 86px;
            margin: 0 auto 1.25rem;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 2rem;
            box-shadow: 0 10px 30px rgba(2,132,199,.25);
            transition: transform .35s ease;
        }

        .feature-card:hover .feature-icon {
            transform: scale(1.075) rotate(360deg);
        }

        .feature-title {
            font-size: 1.35rem;
            font-weight: 900;
            color: #0f172a;
            margin-bottom: .6rem;
            text-align: center;
        }

        .feature-description {
            font-size: 1rem;
            color: #475569;
            line-height: 1.9;
            text-align: center;
        }

        /* ========== Footer ========== */
        .footer {
            background: radial-gradient(800px 400px at 85% -10%, rgba(56,189,248,.18), transparent 40%), radial-gradient(800px 400px at 0% 110%, rgba(96,165,250,.18), transparent 40%), linear-gradient(180deg, #0b1220 0%, #0f172a 100%);
            color: #fff;
            padding: 3rem 0;
            text-align: center;
        }

        .footer-content {
            font-size: 1.05rem;
            margin-bottom: .75rem;
        }

        .footer-links {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            margin-top: 1rem;
            flex-wrap: wrap;
        }

        .footer-link {
            color: #e2e8f0;
            text-decoration: none;
            transition: .2s;
            font-weight: 800;
        }

            .footer-link:hover {
                color: var(--accent-color);
                transform: translateY(-2px);
            }

        .footer-social {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 1.25rem;
        }

        .social-icon {
            width: 46px;
            height: 46px;
            background: rgba(255,255,255,.08);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 1.2rem;
            transition: .25s;
            text-decoration: none;
            border: 1px solid rgba(255,255,255,.12);
        }

            .social-icon:hover {
                background: #fff;
                color: var(--primary-dark);
                transform: translateY(-4px);
            }

        /* ========== Responsive ========== */
        @@media (max-width: 992px) {
            .hero-title {
                font-size: 2.4rem;
            }
        }

        @@media (max-width: 768px) {
            .hero-subtitle {
                font-size: 1.05rem;
            }

            .hero-description {
                font-size: .98rem;
            }

            .btn-hero {
                width: 100%;
                max-width: 320px;
                justify-content: center;
            }

            .section-title {
                font-size: 1.9rem;
            }

            .stat-number {
                font-size: 2.4rem;
            }
        }

        /* مؤشر التمرير */
        .scroll-indicator {
            position: absolute;
            bottom: 2rem;
            left: 50%;
            transform: translateX(-50%);
            z-index: 2;
            animation: bounce 2s infinite;
        }

            .scroll-indicator i {
                font-size: 2rem;
                color: #fff;
                opacity: .9;
            }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateX(-50%) translateY(0);
            }

            40% {
                transform: translateX(-50%) translateY(-18px);
            }

            60% {
                transform: translateX(-50%) translateY(-8px);
            }
        }

        /* احترام تقليل الحركة */
        @@media (prefers-reduced-motion: reduce) {
            .shape, .feature-card:hover .feature-icon, .hero-content, .scroll-indicator

        {
            animation: none !important;
        }

        .btn-hero, .feature-card {
            transition: none !important;
        }

        }
    </style>
</head>
<body>

    <!-- ========== Hero Section ========== -->
    <section class="hero-section">
        <div class="floating-shapes">
            <div class="shape"></div>
            <div class="shape"></div>
            <div class="shape"></div>
        </div>
        <div class="hero-overlay"></div>

        <div class="hero-content">
            <div class="hero-logo" aria-hidden="true">
                <!-- أيقونة تعبر عن الشبكات/المرافق -->
                <i class="fa-solid fa-network-wired"></i>
            </div>
            <h1 class="hero-title">مركز شبكات المرافق</h1>
            <p class="hero-subtitle">نظام إدارة متكامل للشبكات والخدمات</p>
            <p class="hero-description">
                منصة احترافية لإدارة أصول الشبكات، البلاغات الميدانية، التشغيل والصيانة، والتقارير اللحظية.
                تحكّم كامل في دورة العمل من التخطيط وحتى القياس والأداء—بشكل آمن وسريع.
            </p>

            <div class="hero-buttons">
                <a href="@Url.Page("/Account/Login", new { area = "Identity" })" class="btn-hero btn-primary-hero">
                    <i class="fa-solid fa-right-to-bracket"></i><span>تسجيل الدخول</span>
                </a>
                <a asp-action="Details" class="btn-hero btn-secondary-hero">
                    <i class="fa-regular fa-circle-play"></i><span>طلب عرض توضيحي</span>
                </a>
            </div>
        </div>

        <div class="scroll-indicator" title="مرّر لأسفل">
            <i class="fa-solid fa-angles-down"></i>
        </div>
    </section>

    <!-- ========== Stats Section ========== -->
    <section class="stats-section">
        <div class="container">
            <div class="row g-3">
                <div class="col-md-3 col-6">
                    <div class="stat-card">
                        <div class="stat-number">24/7</div>
                        <div class="stat-label">جاهزية وتشغيل</div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-card">
                        <div class="stat-number">99.9%</div>
                        <div class="stat-label">اعتمادية المنظومة</div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-card">
                        <div class="stat-number">∞</div>
                        <div class="stat-label">قابلية التوسّع</div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-card">
                        <div class="stat-number">⚡</div>
                        <div class="stat-label">استجابة فورية</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ========== Features Section ========== -->
    <section class="features-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">مميزات النظام</h2>
                <p class="section-subtitle">حلول موحدة لإدارة شبكات المرافق بكفاءة وموثوقية</p>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-diagram-project"></i></div>
                        <h3 class="feature-title">إدارة الأصول والخرائط</h3>
                        <p class="feature-description">
                            سجل شامل للأصول مع تموضع جغرافي، طبقات خرائط، وتتبع عمر افتراضي للصيانة الوقائية والتنبؤية.
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-truck-fast"></i></div>
                        <h3 class="feature-title">البلاغات والعمليات الميدانية</h3>
                        <p class="feature-description">
                            استقبال البلاغات، توجيه الفرق، تتبّع الأعمال لحظيًا، وإقفال المهام مع صور ومرفقات وتقارير موقعية.
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-chart-line"></i></div>
                        <h3 class="feature-title">لوحات مؤشرات وتقارير</h3>
                        <p class="feature-description">
                            مؤشرات أداء رئيسية، تقارير فنية ومالية، وتصدير إلى PDF/Excel لسرعة المشاركة واتخاذ القرار.
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-users-gear"></i></div>
                        <h3 class="feature-title">صلاحيات وفرق العمل</h3>
                        <p class="feature-description">
                            هيكل أدوار مرن، مهام مخصصة، وتتبّع للحضور والاعتمادات لضمان الحوكمة وسير العمل السليم.
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-shield-halved"></i></div>
                        <h3 class="feature-title">أمان وحماية</h3>
                        <p class="feature-description">
                            تشفير للبيانات، سجلات تدقيق، ومراقبة وصول متعددة المستويات لحماية المعلومات الحساسة.
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-bolt"></i></div>
                        <h3 class="feature-title">تكاملات وواجهات API</h3>
                        <p class="feature-description">
                            تكامل سلس مع أنظمة الدفع، نظم GIS، وأجهزة الاستشعار لضمان تدفق بيانات موحّد.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ========== Footer ========== -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <h4 style="font-weight: 800; margin-bottom: .6rem;">مركز شبكات المرافق</h4>
                <p>نظام إدارة متكامل للشبكات والخدمات—سرعة، أمان، وموثوقية.</p>
            </div>

            <div class="footer-links">
                <a href="#" class="footer-link">الرئيسية</a>
                <a href="#" class="footer-link">عن المركز</a>
                <a href="#" class="footer-link">الخدمات</a>
                <a href="#" class="footer-link">اتصل بنا</a>
                <a href="#" class="footer-link">سياسة الخصوصية</a>
            </div>

            <div class="footer-social">
                <a href="#" class="social-icon" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-icon" title="X / Twitter"><i class="fab fa-x-twitter"></i></a>
                <a href="#" class="social-icon" title="Instagram"><i class="fab fa-instagram"></i></a>
                <a href="#" class="social-icon" title="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
            </div>

            <div style="margin-top: 1.75rem; padding-top: 1.75rem; border-top: 1px solid rgba(255,255,255,0.08);">
                <p>&copy; 2025 مركز شبكات المرافق | جميع الحقوق محفوظة</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // تمرير سلس من مؤشر التمرير
        document.querySelector('.scroll-indicator')?.addEventListener('click', function(){
            document.querySelector('.stats-section').scrollIntoView({ behavior: 'smooth' });
        });

        // تحريك بطاقات المزايا عند الظهور
        const observer = new IntersectionObserver((entries, obs)=>{
            entries.forEach(entry=>{
                if(entry.isIntersecting){
                    entry.target.style.opacity='0';
                    entry.target.style.transform='translateY(26px)';
                    setTimeout(()=>{
                        entry.target.style.transition='all .6s ease-out';
                        entry.target.style.opacity='1';
                        entry.target.style.transform='translateY(0)';
                    }, 60);
                    obs.unobserve(entry.target);
                }
            });
        }, { threshold: .1, rootMargin: '0px 0px -100px 0px' });

        document.querySelectorAll('.feature-card').forEach(c=>observer.observe(c));
    </script>
</body>
