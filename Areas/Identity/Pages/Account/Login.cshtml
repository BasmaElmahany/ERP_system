@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "تسجيل دخول";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - مركز شبكات المرافق</title>
    <meta name="theme-color" content="#0ea5e9" />

    <!-- Bootstrap CSS RTL -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            /* لوحة "بلو" متناغمة */
            --primary-color: #0ea5e9; /* Sky 500 */
            --primary-dark: #0369a1; /* Sky 700 */
            --secondary-color: #1d4ed8; /* Blue 700 */
            --secondary-light: #60a5fa; /* Blue 400 */
            --accent-color: #38bdf8; /* Sky 400 */
            --danger-color: #ef4444; /* Red 500 */
            --card-bg: rgba(255, 255, 255, 0.98);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background: radial-gradient(1200px 600px at 80% -10%, rgba(56, 189, 248, 0.25), transparent 40%), radial-gradient(1000px 500px at 0% 110%, rgba(96, 165, 250, 0.25), transparent 40%), linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            min-height: 100vh;
            overflow: hidden;
            position: relative;
            color: #0f172a;
        }

            body::before {
                content: '';
                position: absolute;
                inset: 0;
                background-image: url("/uploads/OIP (2).jpg");
                background-size: cover;
                background-position: center;
                background-attachment: fixed;
                opacity: 0.08;
                z-index: 0;
                mix-blend-mode: luminosity;
            }

        /* عناصر زخرفية عائمة */
        .floating-shapes {
            position: fixed;
            inset: 0;
            z-index: 0;
            pointer-events: none;
            overflow: hidden;
        }

        .shape {
            position: absolute;
            opacity: 0.12;
            animation: float 20s ease-in-out infinite;
            filter: blur(2px);
        }

            .shape:nth-child(1) {
                top: 12%;
                right: 8%;
                width: 160px;
                height: 160px;
                background: radial-gradient(circle at 30% 30%, var(--secondary-light), var(--secondary-color));
                border-radius: 50%;
                animation-delay: 0s;
            }

            .shape:nth-child(2) {
                top: 62%;
                left: 8%;
                width: 220px;
                height: 220px;
                background: radial-gradient(circle at 70% 60%, var(--accent-color), var(--primary-dark));
                border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                bottom: 8%;
                right: 22%;
                width: 190px;
                height: 190px;
                background: radial-gradient(circle at 40% 40%, var(--primary-color), var(--secondary-color));
                border-radius: 63% 37% 54% 46% / 55% 48% 52% 45%;
                animation-delay: 4s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-28px) rotate(180deg);
            }
        }

        .login-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            position: relative;
            z-index: 1;
        }

        .login-wrapper {
            width: 100%;
            max-width: 480px;
            animation: fadeInUp 0.8s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* الشعار */
        .login-logo {
            text-align: center;
            margin-bottom: 2rem;
        }

        .logo-icon {
            width: 100px;
            height: 100px;
            margin: 0 auto 1.5rem;
            background: linear-gradient(145deg, #ffffff, #f1f5f9);
            border-radius: 50%;
            display: grid;
            place-items: center;
            font-size: 2.7rem;
            color: var(--primary-dark);
            box-shadow: 0 20px 60px rgba(2, 132, 199, 0.35);
            border: 1px solid rgba(2, 132, 199, 0.15);
            animation: pulse 2s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
                box-shadow: 0 20px 60px rgba(2,132,199,0.35);
            }

            50% {
                transform: scale(1.05);
                box-shadow: 0 26px 70px rgba(2,132,199,0.45);
            }
        }

        .logo-text {
            color: #ffffff;
            font-size: 2rem;
            font-weight: 800;
            text-shadow: 0 5px 20px rgba(0,0,0,0.25);
            margin-bottom: .4rem;
        }

        .logo-subtitle {
            color: rgba(255,255,255,0.95);
            font-size: 1.06rem;
            font-weight: 600;
        }

        /* البطاقة */
        .login-card {
            background: var(--card-bg);
            backdrop-filter: blur(18px);
            border-radius: 2rem;
            box-shadow: 0 30px 80px rgba(2, 132, 199, 0.30);
            overflow: hidden;
            border: 1px solid rgba(2, 132, 199, 0.10);
        }

        .card-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 2rem;
            text-align: center;
            border: none;
            position: relative;
            overflow: hidden;
        }

            .card-header::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.12) 0%, transparent 70%);
                animation: rotate 15s linear infinite;
            }

        @@keyframes rotate {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        .card-header h2 {
            margin: 0;
            font-size: 1.8rem;
            font-weight: 800;
            position: relative;
            z-index: 1;
            letter-spacing: .5px;
        }

        .card-header p {
            margin: .5rem 0 0 0;
            font-size: 1rem;
            opacity: .98;
            position: relative;
            z-index: 1;
        }

        .card-body {
            padding: 3rem;
        }

        /* النموذج */
        .form-group {
            margin-bottom: 1.3rem;
            position: relative;
        }

        .input-group-custom {
            position: relative;
        }

        .input-icon {
            position: absolute;
            right: 1.1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-dark);
            font-size: 1.2rem;
            z-index: 10;
            pointer-events: none;
            transition: .2s;
        }

        .form-control {
            border-radius: 1rem;
            border: 2px solid #e2e8f0;
            padding: 1rem 1.1rem 1rem 3.2rem;
            font-size: 1.05rem;
            transition: all .25s ease;
            background: #ffffff;
            height: auto;
        }

            .form-control:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 0 4px rgba(56, 189, 248, 0.15);
                outline: none;
                transform: translateY(-2px);
            }

        .form-label {
            font-weight: 700;
            color: #0f172a;
            margin-bottom: .65rem;
            font-size: 1rem;
            display: block;
        }

        .form-check {
            padding-right: 1.75rem;
            margin-bottom: 1.3rem;
        }

        .form-check-input {
            width: 1.15rem;
            height: 1.15rem;
            margin-top: .2rem;
            border: 2px solid #cbd5e0;
            cursor: pointer;
        }

            .form-check-input:checked {
                background-color: var(--primary-color);
                border-color: var(--primary-color);
            }

        .form-check-label {
            font-size: 1rem;
            color: #334155;
            cursor: pointer;
            user-select: none;
        }

        /* زر الدخول */
        .btn-login {
            width: 100%;
            padding: 1.15rem;
            font-size: 1.15rem;
            font-weight: 800;
            letter-spacing: .3px;
            border-radius: 1rem;
            border: none;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            color: #ffffff;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            box-shadow: 0 12px 32px rgba(2,132,199,.35);
            transition: transform .25s ease, box-shadow .25s ease;
        }

            .btn-login::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                border-radius: 50%;
                background: rgba(255,255,255,.28);
                transform: translate(-50%,-50%);
                transition: width .6s, height .6s;
            }

            .btn-login:hover::before {
                width: 420px;
                height: 420px;
            }

            .btn-login:hover {
                transform: translateY(-3px);
                box-shadow: 0 16px 40px rgba(2,132,199,.45);
            }

            .btn-login:active {
                transform: translateY(-1px);
            }

            .btn-login span {
                position: relative;
                z-index: 1;
            }

        /* التنبيهات */
        .alert-danger {
            border-radius: 1rem;
            border: none;
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.08) 0%, rgba(56, 189, 248, 0.08) 100%);
            border: 2px solid rgba(239, 68, 68, 0.25);
            color: #b91c1c;
            padding: 1rem 1.25rem;
            font-size: .95rem;
            margin-bottom: 1.1rem;
        }

            .alert-danger ul {
                margin: 0;
                padding-right: 1.25rem;
            }

        .text-danger {
            color: #b91c1c;
            font-size: .875rem;
            margin-top: .5rem;
            display: block;
        }

        /* روابط إضافية */
        .login-links {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #e2e8f0;
        }

        .login-link {
            color: var(--primary-dark);
            text-decoration: none;
            font-weight: 700;
            font-size: 1rem;
            transition: all .25s ease;
            display: inline-block;
            margin: .5rem 0;
        }

            .login-link:hover {
                color: var(--secondary-color);
                transform: translateX(-3px);
            }

            .login-link i {
                margin-left: .5rem;
            }

        /* زر الرجوع للرئيسية */
        .back-home {
            position: fixed;
            top: 2rem;
            right: 2rem;
            z-index: 100;
        }

        .btn-back {
            background: rgba(255,255,255,.22);
            backdrop-filter: blur(10px);
            color: white;
            border: 2px solid rgba(255,255,255,.28);
            padding: .75rem 1.25rem;
            border-radius: 2rem;
            text-decoration: none;
            font-weight: 800;
            display: inline-flex;
            align-items: center;
            gap: .55rem;
            transition: all .25s ease;
        }

            .btn-back:hover {
                background: #ffffff;
                color: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 10px 30px rgba(2,132,199,.25);
            }

        /* Responsive */
        @@media (max-width: 576px) {
            .login-container {
                padding: 1rem;
            }

            .card-body {
                padding: 2rem 1.5rem;
            }

            .logo-text {
                font-size: 1.55rem;
            }

            .logo-subtitle {
                font-size: .98rem;
            }

            .card-header h2 {
                font-size: 1.55rem;
            }

            .back-home {
                top: 1rem;
                right: 1rem;
            }

            .btn-back {
                padding: .55rem 1rem;
                font-size: .9rem;
            }
        }

        /* حالة التحميل */
        .btn-login.loading {
            pointer-events: none;
            opacity: .8;
        }

            .btn-login.loading::after {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                top: 50%;
                left: 50%;
                margin: -10px 0 0 -10px;
                border: 3px solid rgba(255,255,255,.35);
                border-radius: 50%;
                border-top-color: #fff;
                animation: spin .8s linear infinite;
            }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* تحسين بؤرة الأيقونة مع الإدخال */
        .input-focused .input-icon {
            transform: translateY(-50%) scale(1.1);
            color: var(--primary-color);
        }
    </style>
</head>
<body>
    <!-- عناصر زخرفية -->
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <!-- زر الرجوع -->
    <div class="back-home">
        <a href="/" class="btn-back">
            <i class="fa-solid fa-house"></i>
            <span>العودة للرئيسية</span>
        </a>
    </div>

    <!-- الحاوية -->
    <div class="login-container">
        <div class="login-wrapper">
            <!-- الشعار -->
            <div class="login-logo">
                <div class="logo-icon" aria-hidden="true" title="شبكات المرافق">
                    <!-- أيقونة مناسبة للعنوان -->
                    <i class="fa-solid fa-network-wired"></i>
                </div>
                <h1 class="logo-text">مركز شبكات المرافق</h1>
                <p class="logo-subtitle">نظام إدارة متكامل</p>
            </div>

            <!-- البطاقة -->
            <div class="login-card">
                <div class="card-header">
                    <h2>تسجيل الدخول</h2>
                    <p>مرحباً بك! الرجاء تسجيل الدخول للمتابعة</p>
                </div>

                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- اسم المستخدم -->
                        <div class="form-group">
                            <label asp-for="Input.Email" class="form-label">اسم المستخدم</label>
                            <div class="input-group-custom">
                                <i class="fa-solid fa-user input-icon"></i>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="أدخل اسم المستخدم" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- كلمة المرور -->
                        <div class="form-group">
                            <label asp-for="Input.Password" class="form-label">كلمة المرور</label>
                            <div class="input-group-custom">
                                <i class="fa-solid fa-lock input-icon"></i>
                                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="أدخل كلمة المرور" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- تذكرني -->
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">تذكرني على هذا الجهاز</label>
                        </div>

                        <!-- زر الدخول -->
                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn-login">
                                <span>تسجيل الدخول</span>
                            </button>
                        </div>

                        <!-- روابط إضافية (اختياري) -->
                        @*<div class="login-links">
                            <div>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="login-link">
                                    <i class="fa-solid fa-key"></i>
                                    هل نسيت كلمة المرور؟
                                </a>
                            </div>
                            <div>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="login-link">
                                    <i class="fa-solid fa-user-plus"></i>
                                    تسجيل مستخدم جديد
                                </a>
                            </div>
                            <div>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="login-link">
                                    <i class="fa-solid fa-envelope"></i>
                                    إعادة إرسال تأكيد البريد الإلكتروني
                                </a>
                            </div>
                        </div>*@
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        // حالة تحميل الزر عند الإرسال
        document.getElementById('account').addEventListener('submit', function () {
            const btn = document.getElementById('login-submit');
            btn.classList.add('loading');
            btn.querySelector('span').textContent = 'جاري تسجيل الدخول...';
        });

        // تفعيل تأثير الأيقونة مع التركيز
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function () {
                this.parentElement.classList.add('input-focused');
            });
            input.addEventListener('blur', function () {
                this.parentElement.classList.remove('input-focused');
            });
        });
    </script>
</body>
</html>
